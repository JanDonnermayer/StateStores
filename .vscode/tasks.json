{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/tests/StateStores.Test/StateStores.Test.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/tests/StateStores.Test/StateStores.Test.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/tests/StateStores.Test/StateStores.Test.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test.redis",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/tests/StateStores.Redis.Test/StateStores.Redis.Test.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test.inmemory",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/tests/StateStores.InMemory.Test/StateStores.InMemory.Test.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "pack.redis.arrk",
            "command": "dotnet",
            "type": "process",
            "dependsOn": "test.redis",
            "args": [
                "pack",
                "${workspaceFolder}/src/StateStores.Redis/StateStores.Redis.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c:Release",
                "-p:PackageVersion=${input:packageVersion}",
                "-o://mucfs/project/TOOLS/Mupe/Private/Development/.NuGet"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "pack.inmemory.arrk",
            "command": "dotnet",
            "type": "process",
            "dependsOn": "test.inmemory",
            "args": [
                "pack",
                "${workspaceFolder}/src/StateStores.InMemory/StateStores.InMemory.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c:Release",
                "-p:PackageVersion=${input:packageVersion}",
                "-o://mucfs/project/TOOLS/Mupe/Private/Development/.NuGet"
            ],
            "problemMatcher": "$msCompile"
        },        
        {
            "label": "pack.redis.out",
            "command": "dotnet",
            "type": "process",
            "dependsOn": "test.redis",
            "args": [
                "pack",
                "${workspaceFolder}/src/StateStores.Redis/StateStores.Redis.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c:Release",
                "-p:PackageVersion=${input:packageVersion}",
                "-o:out/redis"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "pack.inmemory.out",
            "command": "dotnet",
            "type": "process",
            "dependsOn": "test.inmemory",
            "args": [
                "pack",
                "${workspaceFolder}/src/StateStores.InMemory/StateStores.InMemory.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c:Release",
                "-p:PackageVersion=${input:packageVersion}",
                "-o:out/inmemory"
            ],
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "packageVersion",
            "description": "Specify package version.",
            "default": "0.0.0"
        }
    ]
}